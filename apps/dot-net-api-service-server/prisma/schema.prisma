datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Settings {
  createdAt DateTime              @default(now())
  id        String                @id @default(cuid())
  language  EnumSettingsLanguage?
  theme     EnumSettingsTheme?
  updatedAt DateTime              @updatedAt
  user      User?                 @relation(fields: [userId], references: [id])
  userId    String?
}

model Profile {
  bio               String?
  createdAt         DateTime @default(now())
  id                String   @id @default(cuid())
  location          String?
  name              String?
  profilePictureUrl String?
  updatedAt         DateTime @updatedAt
  user              User?    @relation(fields: [userId], references: [id])
  userId            String?
}

model Privacy {
  createdAt                  DateTime                               @default(now())
  id                         String                                 @id @default(cuid())
  informationDisplaySettings EnumPrivacyInformationDisplaySettings?
  profileVisibility          EnumPrivacyProfileVisibility?
  updatedAt                  DateTime                               @updatedAt
  user                       User?                                  @relation(fields: [userId], references: [id])
  userId                     String?
}

model UserConnection {
  connectionType EnumUserConnectionConnectionType?
  createdAt      DateTime                          @default(now())
  id             String                            @id @default(cuid())
  updatedAt      DateTime                          @updatedAt
  user1          String?
  user2          String?
}

model User {
  createdAt     DateTime   @default(now())
  email         String?    @unique
  firstName     String?
  id            String     @id @default(cuid())
  lastLogin     DateTime?
  lastName      String?
  password      String
  privacies     Privacy[]
  profiles      Profile[]
  roles         Json
  settingsItems Settings[]
  sub           String?
  updatedAt     DateTime   @updatedAt
  username      String     @unique
}

enum EnumSettingsLanguage {
  Option1
}

enum EnumSettingsTheme {
  Option1
}

enum EnumPrivacyInformationDisplaySettings {
  Option1
}

enum EnumPrivacyProfileVisibility {
  Option1
}

enum EnumUserConnectionConnectionType {
  Option1
}
